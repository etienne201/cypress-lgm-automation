# Application URLs
CYPRESS_BASE_URL=https://test.lagrowthmachine.xyz
CYPRESS_API_URL=https://test.lagrowthmachine.xyz/api

# Test Users (DO NOT COMMIT REAL CREDENTIALS)
CYPRESS_ADMIN_EMAIL=admin@example.com
CYPRESS_ADMIN_PASSWORD=SecurePassword123!
CYPRESS_USER_EMAIL=user@example.com
CYPRESS_USER_PASSWORD=UserPassword123!

# API Configuration
CYPRESS_API_TOKEN=your_api_token_here
CYPRESS_API_KEY=your_api_key_here

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# GitHub Actions
GITHUB_TOKEN=your_github_token

# Cypress Cloud (optional)
CYPRESS_RECORD_KEY=your_cypress_cloud_record_key
CYPRESS_PROJECT_ID=your_project_id

# Allure Reports
ALLURE_RESULTS_PATH=allure-results
ALLURE_REPORT_PATH=allure-report

# Environment
NODE_ENV=test
CI=false

# Timeouts
CYPRESS_DEFAULT_COMMAND_TIMEOUT=10000
CYPRESS_REQUEST_TIMEOUT=15000
CYPRESS_PAGE_LOAD_TIMEOUT=60000

# Feature Flags
ENABLE_VIDEO_RECORDING=true
ENABLE_SCREENSHOTS=true
ENABLE_PARALLEL_TESTS=false